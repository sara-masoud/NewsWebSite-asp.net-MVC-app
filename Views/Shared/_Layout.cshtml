            function checkfiles() {
                let uploaderVal = document.getElementById("fileUploader").value;
                var lblError = document.getElementById("lblError");
                if (!uploaderVal) {
                    lblError.innerHTML = "You have to upload an image."
                    return false;
                }
                let permittedExtensions = /(\.jpg|\.jpeg|\.gif|\.png)$/i;
                if (!permittedExtensions.exec(uploaderVal)) {
                    lblError.innerHTML = "File extension is not supported, You should upload jpg or jpeg or gif or png ";
                    return false;
                }
            }

